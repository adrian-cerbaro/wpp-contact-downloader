{
    "name": "WhatsApp Contact Downloader",
    "version": "0.0.1",
    "description": "Download contacts sent to your WhatsApp easily.",
    "permissions": [
        "*://web.whatsapp.com/*",
        "declarativeContent",
        "activeTab"
    ],
    "background": {
        "scripts": ["app/js/background.min.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://web.whatsapp.com/*"],
            "js": ["app/js/jquery-3.4.1.min.js", "app/js/content.min.js"]
        }
    ],
    "page_action": {
        "default_title": "WhatsApp Contact Downloader",
        "default_popup": "app/popup.html"
    },
    "manifest_version": 2
}
