{
    "name": "WhatsApp Contact Downloader",
    "version": "0.0.2",
    "description": "A simple Chrome extension to download contacts from WhatsApp Web conversations and groups.",
    "permissions": [
        "*://web.whatsapp.com/*",
        "declarativeContent",
        "activeTab"
    ],
    "background": {
        "scripts": ["app/js/background.min.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://web.whatsapp.com/*"],
            "js": [
                "app/js/jquery-3.4.1.min.js",
                "app/js/includes.min.js",
                "app/js/content.min.js"
            ]
        }
    ],
    "page_action": {
        "default_title": "WhatsApp Contact Downloader",
        "default_popup": "app/popup.html"
    },
    "icons": {
        "16": "app/img/icon/icon16.png",
        "48": "app/img/icon/icon48.png",
        "32": "app/img/icon/icon32.png",
        "128": "app/img/icon/icon128.png"
    },
    "manifest_version": 2
}
